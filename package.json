{
  "name": "attn",
  "description": "Attn: An agent to protect your attention",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "start": "concurrently \"tsx watch server/index.ts\" \"vite --port 3000\" \"ngrok http --url=just-presumably-warthog.ngrok-free.app 3000 --log=stdout\"",
    "dev:server": "tsx watch server/index.ts",
    "dev:client": "vite --port 3000",
    "cli": "tsx command/command.ts",
    "gather": "tsx command/command.ts gather-posts",
    "test": "vitest run",
    "format": "prettier --write .",
    "check": "tsc --noEmit",
    "pre-commit": "npm run check"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^1.2.10",
    "@ai-sdk/google": "^1.2.18",
    "@ai-sdk/openai": "^1.3.22",
    "@modelcontextprotocol/sdk": "^1.11.0",
    "ai": "^4.3.13",
    "puppeteer": "^24.8.0",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.7.2",
    "vitest": "^3.0.9",
    "yarg": "^1.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.12",
    "@types/react": "^19.0.3",
    "@types/react-dom": "^19.0.2",
    "@types/supertest": "^6.0.2",
    "@types/yargs": "^17.0.33",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.0",
    "esbuild": "^0.25.1",
    "nodemon": "^3.1.9",
    "prettier": "3.3.3",
    "supertest": "^7.0.0",
    "tsx": "^4.19.2",
    "vite": "^6.0.7"
  }
}
